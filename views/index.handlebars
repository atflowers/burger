<div class="container-fluid">
  <div id="title-block">
    <h1>Eat-Da-Burger!</h1>
    <img class="titleburger" src="/static/images/titleburger.png">
  </div>
  <div class="row-fluid">
    <div class="col-md-6">
      Not Devoured
      {{#each burger_data}}
        {{#unless this.devoured}}
        <div class="burgerBorder"> 
          <img class="burgerImg" src="/static/images/burger.png">     
          <div>
            <div class="burger">{{this.id}}. {{this.burger_name}}</div>
          </div>
        </div>
        <div class="devourBtn">
          <form method="POST" action="/update?_method=POST">
            <input type="hidden" type="text" name="id" value={{this.id}}>
            <button type="submit" class="btn btn-default">Devour it!</button>
          </form>
        </div>
        {{/unless}}
      {{/each}}
    </div>
    <div class="col-md-6">
      Devoured
      {{#each burger_data}}
        {{#if this.devoured}}
        <div class="burgerlessBorder">
          <img class="burgerlessImg" src="/static/images/crumbs.png">     
          <div>
            <div class="burgerless">{{this.id}}. {{this.burger_name}}</div>
          </div>
        </div>
        {{/if}}
      {{/each}}
    </div>
  </div>
  <div class=row-fluid>
    <div class=col-md-12>
      <form action="/create" method="POST">
        <input placeholder="Enter a new burger name" name="burger_name"></input><br>
        <button type="submit" id= "addBurgerBtn"class="btn btn-primary">Add A New Burger!</button>
      </form>
    </div>
  </div>
</div>